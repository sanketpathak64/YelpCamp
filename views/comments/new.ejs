<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new comment to <%= campground.name %></h1>

        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST"> <!-- action is campgrounds which is the route -->
                <div class="form-group"> 
                    <input class="form-control" type="text" name="comment[text]" placeholder="text"> <!-- comment[text] - text will be nested inside comment -->
                </div>
            
               
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button> <!-- btn-block makes the button take entire line -->
                </div>
            </form>
            <a href="/campgrounds">Back</a>
            
        </div>
    </div>
</div>

<% include ../partials/footer %>