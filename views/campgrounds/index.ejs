<% include ../partials/header %> <!-- ../ - takes one level back -->

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>List of some campgrounds in Goa</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
            </p>  
        </div>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <ul>
            <% campgrounds.forEach(function(camp) { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= camp.image %>"> <!-- need "" around the URL, so need to add <%= %> inside "" -->
                        <div class="caption">
                            <h3><%= camp.name %></h3>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">Info</a>
                        </p>
                    </div>    
                </div>
            <% }); %>
        </ul>
    </div>
</div>



<% include ../partials/footer %>